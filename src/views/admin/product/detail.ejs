<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Hỏi Dân IT - Dự án laptopshop" />
    <meta name="author" content="Hỏi Dân IT" />
    <title>View Detail Products</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
       <script>
                    $(document).ready(() => {
                        const avatarFile = $("#avatarFile");
                        avatarFile.change(function (e) {
                            const imgURL = URL.createObjectURL(e.target.files[0]);
                            $("#avatarPreview").attr("src", imgURL);
                            $("#avatarPreview").css({ "display": "block" });
                        });
                    });
                </script>

</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header') %>
   
    <div id="layoutSidenav">
        <%- include('../layout/sidenav') %> 
        <div id="layoutSidenav_content">
            <main>
              <div class="container-fluid px-4">
<h2 class="mt-4">View Detail Products</h2>
<ol class="breadcrumb mb-4">
<li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
<li class="breadcrumb-item active"><a href="/admin/product">Products</a></li>
</ol>
<div>
        <div class="container" style=" margin: 0 auto;">
        <% errors.forEach((error) => { %>
            <div class="alert alert-danger mb-3" role="alert">
                <%= error %>
            </div>
        <% }) %>
        <h3>Form view detail products</h3>
        <form action="/admin/update-product" method="POST" enctype="multipart/form-data">
            <input type="text" name="id" value="<%= product.id %>" hidden>
          <div class="row">
            <div class="mb-3 col-6">
                <label class="form-label">Name</label>
                <input value="<%= oldData.name %>" type="text" class="form-control" name="name" >
            </div>
            <div class="mb-3 col-6">
                <label class="form-label">Price</label>
                <input value="<%= oldData.price %>" type="number" class="form-control" name="price" >
          </div>
  </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="detailDesc" class="form-control" rows="2"><%= oldData.detailDesc %></textarea>
 </div>
 <div class="row">
 <div class="mb-3 col-6">
     <label class="form-label">Short Description</label>
        <input value="<%= oldData.shortDesc %>" type="text" name="shortDesc" class="form-control"></input>
 </div>
 <div class="mb-3 col-6">
    <label class="form-label">Quantity</label>
    <input value="<%= oldData.quantity %>" type="number" name="quantity" class="form-control"></input>
 </div>
 </div>
           
<div class="row">
    <div class="mb-3 col-6">
        <label class="form-label">Factory</label>
        <select name="factory" class="form-select"> 
            <% factoryOptions.forEach((factory,index) => { %>
               <option value="<%= factory.value %>"
                <%= factory.value === product.factory ? 'selected' : '' %>>
                    <%= factory.name %>
               </option>
            <% }) %>
        </select>
    </div>
    <div class="mb-3 col-6">
        <label class="form-label">Target</label>
        <select name="target" class="form-select">
         <% targetOptions.forEach((target,index) => { %>
               <option value="<%= target.value %>"
                <%= target.value === product.target ? 'selected' : '' %>>
                    <%= target.name %>
               </option>
            <% }) %>
        </select>
    </div>
</div>

    <div class="mb-3">
        <label for="formFile" class="form-label">Image</label>
        <input class="form-control" type="file" id="avatarFile" name="image" accept=".png, .jpg, .jpeg">
    </div>
<% if (product.image) { %>
    <img src="/images/product/<%= product.image %>" style="max-height: 250px; display: block;" alt="image preview" id="avatarPreview" />
<% } else { %>
    <img style="max-height: 250px; display: none;" alt="image preview" id="avatarPreview" />
<% } %>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary mt-3">Tạo mới</button>
            </div>
    </div>  
</div>
            </main>
            <%- include('../layout/footer') %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
        
    <script src="/admin/js/scripts.js"></script>
   
</body>

</html>